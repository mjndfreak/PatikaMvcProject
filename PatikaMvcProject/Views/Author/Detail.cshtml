@model AuthorDetailViewModel

<div class="card" >
    <img src="https://media.istockphoto.com/id/173015527/tr/foto%C4%9Fraf/a-single-red-book-on-a-white-surface.jpg?s=2048x2048&w=is&k=20&c=NGBLpTsY6xA118FWSw0uiZKhXUCyfnrT3tQtx2svHow=" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
        <p class="card-text">Author Id: @Model.Id</p>
        <p class="card-text">Date of Birth: @Model.DateOfBirth</p>
    </div>
    <div class="card-footer">
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <a asp-controller="Author" asp-action="Detail" asp-route-id="@Model.Id" type="button" class="btn btn-success">Details</a>
            <a  type="button" class="btn btn-warning">Update</a>
            <a asp-controller="Author" asp-action="Delete" asp-route-id="@Model.Id" type="button" class="btn btn-dark">Delete</a>
        </div>
    </div>
</div>
